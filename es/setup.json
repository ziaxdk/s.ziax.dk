{
  "settings": {
    "index" : {
      "analysis" : {
        "analyzer" : {
          "lcasekeywordanalyser": {
            "type": "custom",
            "tokenizer": "keyword",
            "filter": [ "lowercase" ]
          }
        }

      }
    }

  },

  "mappings": {
    "article": {
      "dynamic": "strict",
      "properties": {
        "header": {
          "type": "string"
        },
        "content": {
          "type": "string"
        },
        "tags": {
          "type": "string"
        },
        "createdutc": {
          "type": "date"
        },
        "clicks": {
          "type": "integer"
        },
        "ip": {
          "type": "ip"
        },
        "onlyAuth": {
          "type": "boolean"
        },
        "star": {
          "type": "boolean"
        }
      }
    },
    "link": {
      "dynamic": "strict",
      "properties": {
        "header": {
          "type": "string"
        },
        "content": {
          "type": "string"
        },
        "tags": {
          "type": "string"
        },
        "createdutc": {
          "type": "date"
        },
        "url": {
          "type": "string"
        },
        "clicks": {
          "type": "integer"
        },
        "ip": {
          "type": "ip"
        },
        "onlyAuth": {
          "type": "boolean"
        },
        "star": {
          "type": "boolean"
        }
      }
    },
    "place": {
      "dynamic": "strict",
      "properties": {
        "header": {
          "type": "string"
        },
        "content": {
          "type": "string"
        },
        "tags": {
          "type": "string"
        },
        "createdutc": {
          "type": "date"
        },
        "location": {
          "type": "geo_point"
        },
        "clicks": {
          "type": "integer"
        },
        "ip": {
          "type": "ip"
        },
        "onlyAuth": {
          "type": "boolean"
        },
        "star": {
          "type": "boolean"
        }
      }
    },

    "drive": {
      "dynamic": "strict",

      "properties": {
        "header": {
          "type": "string"
        },
        "content": {
          "type": "string"
        },
        "tags": {
          "type": "string"
        },
        "createdutc": {
          "type": "date"
        },
        "clicks": {
          "type": "integer"
        },
        "geo": {
          "type": "geo_point"
        },
        "ip": {
          "type": "ip"
          },
        "onlyAuth": {
          "type": "boolean"
        }
      }
    },


    "history": {
      "_all": {
        "enabled": "false"
        },
      "dynamic": "strict",
      "properties": {
        "q": {
          "type": "string",
          "index_analyzer": "keyword",
          "search_analyzer": "lcasekeywordanalyser"
        },
        "q2": {
          "type": "multi_field",
          "fields": {
            "value": { "type": "string", "analyzer": "lcasekeywordanalyser" },
            "facet": { "type": "string", "index": "not_analyzed" }
          }
        },
        "createdutc": {
          "type": "date"
        }
      }
    }
  }
}