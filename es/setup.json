{
  "settings": {
    "index" : {
      "analysis" : {
        "analyzer" : {
          "lcasekeywordanalyser": {
            "type": "custom",
            "tokenizer": "keyword",
            "filter": [ "lowercase" ]
          }
        },
        "filter": {
          "z_compound": {
            "type": "dictionary_decompounder",
            "word_list": ["fotboll", "fot", "lag", "boll"],
            "min_subword_size": 2
          }          
        }
      }
    }

  },

  "mappings": {

    "article": {
      "dynamic": "strict",
      "properties": {
        "header": {
          "type": "string"
        },
        "content": {
          "type": "string"
        },
        "tags": {
          "type": "string"
        },
        "createdutc": {
          "type": "date"
        },
        "updatedutc": {
          "type": "date"
        },
        "clicks": {
          "type": "integer"
        },
        "ip": {
          "type": "ip"
        },
        "onlyAuth": {
          "type": "boolean"
        },
        "star": {
          "type": "boolean"
        }
      }
    },
    "link": {
      "dynamic": "strict",
      "properties": {
        "header": {
          "type": "string"
        },
        "content": {
          "type": "string"
        },
        "tags": {
          "type": "string"
        },
        "createdutc": {
          "type": "date"
        },
        "updatedutc": {
          "type": "date"
        },
        "url": {
          "type": "string"
        },
        "clicks": {
          "type": "integer"
        },
        "ip": {
          "type": "ip"
        },
        "onlyAuth": {
          "type": "boolean"
        },
        "star": {
          "type": "boolean"
        }
      }
    },
    "place": {
      "dynamic": "strict",
      "properties": {
        "header": {
          "type": "string"
        },
        "content": {
          "type": "string"
        },
        "tags": {
          "type": "string"
        },
        "updatedutc": {
          "type": "date"
        },
        "createdutc": {
          "type": "date"
        },
        "icon": {
          "type": "string"
        },
        "location": {
          "type": "geo_point"
        },
        "clicks": {
          "type": "integer"
        },
        "ip": {
          "type": "ip"
        },
        "onlyAuth": {
          "type": "boolean"
        },
        "star": {
          "type": "boolean"
        }
      }
    },
    "flight": {
      "dynamic": "strict",
      "properties": {
        "header": {
          "type": "string"
        },
        "content": {
          "type": "string"
        },
        "tags": {
          "type": "string"
        },
        "updatedutc": {
          "type": "date"
        },
        "createdutc": {
          "type": "date"
        },
        "clicks": {
          "type": "integer"
        },
        "ip": {
          "type": "ip"
        },
        "onlyAuth": {
          "type": "boolean"
        },
        "star": {
          "type": "boolean"
        },
        "date": {
          "type": "date",
          "format" : "YYYY-MM-dd"
        },
        "airports": {
          "properties": {
            "name": {
              "type": "string"
            },
            "airport_iata": {
              "type": "string"
            },
            "airport_icao": {
              "type": "string"
            },
            "location": {
              "type": "geo_point"
            }
          }
        }
      }
    },

    "history": {
      "_all": {
        "enabled": "false"
        },
      "dynamic": "strict",
      "properties": {
        "q": {
          "type": "string",
          "index_analyzer": "keyword",
          "search_analyzer": "lcasekeywordanalyser"
        },
        "q2": {
          "type": "multi_field",
          "fields": {
            "value": { "type": "string", "analyzer": "lcasekeywordanalyser" },
            "facet": { "type": "string", "index": "not_analyzed" }
          }
        },
        "createdutc": {
          "type": "date"
        }
      }
    }
  }
}