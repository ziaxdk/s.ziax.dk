{
  "settings": {
    "index" : {
      "analysis" : {
        "analyzer" : {
          "lcasekeywordanalyser": {
            "type": "custom",
            "tokenizer": "keyword",
            "filter": [ "lowercase" ]
          }
        }

      }
    }

  },


  "mappings": {
    "drive": {
      "dynamic": "strict",

      "properties": {
        "header": {
          "type": "string"
        },
        "content": {
          "type": "string"
        },
        "tags": {
          "type": "string"
        },
        "createdutc": {
          "type": "date"
        },
        "clicks": {
          "type": "integer"
        },
        "onlyAuth": {
          "type": "boolean"
        }
      }
    },


    "history": {
      "_all": {
        "enabled": "false"
        },
      "dynamic": "strict",
      "properties": {
        "q": {
          "type": "string",
          "index_analyzer": "keyword",
          "search_analyzer": "lcasekeywordanalyser"
        },
        "q2": {
          "type": "multi_field",
          "fields": {
            "value": { "type": "string", "analyzer": "lcasekeywordanalyser" },
            "facet": { "type": "string", "index": "not_analyzed" }
          }
        },
        "createdutc": {
          "type": "date"
        }
      }
    }
  }
}